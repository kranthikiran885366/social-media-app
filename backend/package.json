{
  "name": "smart-social-platform-backend",
  "version": "1.0.0",
  "description": "Complete Instagram clone backend with AI features",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "start:all": "concurrently \"npm run start:auth\" \"npm run start:content\" \"npm run start:feed\" \"npm run start:chat\" \"npm run start:notifications\" \"npm run start:search\" \"npm run start:analytics\" \"npm run start:ai\" \"npm run start:payment\" \"npm run start:security\" \"npm run start:admin\" \"npm run start:ml\"",
    "start:auth": "cd services/auth-service && npm start",
    "start:content": "cd services/content-service && npm start",
    "start:feed": "cd services/feed-service && npm start",
    "start:chat": "cd services/chat-service && npm start",
    "start:notifications": "cd services/notification-service && npm start",
    "start:search": "cd services/search-service && npm start",
    "start:analytics": "cd services/analytics-service && npm start",
    "start:ai": "cd services/ai-moderation-service && npm start",
    "start:payment": "cd services/payment-service && npm start",
    "start:security": "cd services/security-service && npm start",
    "start:admin": "cd services/admin-service && npm start",
    "start:ml": "cd services/ml-service && npm start",
    "docker:up": "docker-compose -f infrastructure/docker-compose.production.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker-compose.production.yml down",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "redis": "^4.6.7",
    "socket.io": "^4.7.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "joi": "^17.9.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.5",
    "fluent-ffmpeg": "^2.1.2",
    "aws-sdk": "^2.1445.0",
    "firebase-admin": "^11.10.1",
    "@google-cloud/vision": "^4.0.2",
    "openai": "^4.0.0",
    "@tensorflow/tfjs-node": "^4.10.0",
    "@elastic/elasticsearch": "^8.9.0",
    "stripe": "^13.5.0",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "nodemailer": "^6.9.4",
    "twilio": "^4.15.0",
    "concurrently": "^8.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "@types/node": "^20.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "social-media",
    "instagram-clone",
    "nodejs",
    "microservices",
    "ai",
    "machine-learning",
    "real-time"
  ],
  "author": "Smart Social Platform Team",
  "license": "MIT"
}